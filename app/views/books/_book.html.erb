<!-- Паршиал отображения инфы об отдельной книге -->

<div class="col-sm-4 col-md-2">
  <div class="thumbnail">
    <%= render_last_comments(book.comments.empty?, book.comments.last(3).map(&:body)) %>
  </div>
</div>

<div class="col-sm-6 col-md-4">
  <div class="thumbnail">

    <div class="caption">
      <h3><%= link_to book.title, book_path(book) %></h3>
      <p> <%= image_tag book.avatar_title.thumb %> </p>
      <p class="buffer-top"><em><%= sklonyator(book.author) %>: <%= book.author %></em></p>

    </div>
  </div>
</div>