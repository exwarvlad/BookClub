<%= form_for(@book) do |f| %>

    <%= render partial: 'partials/form_errors', locals: {model: @book} %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', maxlength: Book::TITLE_MAXIMUM_LENGTH %>
    </div>

    <div class="form-group">
      <%= f.label :author %>
      <%= f.text_field :author, class: 'form-control', maxlength: Book::AUTHOR_MAXIMUM_LENGTH %>
    </div>

    <div class="form-group">
      <%= f.label :genre %>
      <%= f.text_field :genre, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :year %>
      <%= f.text_field :year, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :avatar_title %>
      <p><%= image_tag(@book.avatar_title.thumb.url) if @book.avatar_title? %></p>
      <%= f.file_field :avatar_title %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', maxlength: Book::DESCRIPTION_MAXIMUM_LENGTH %>
    </div>

    <div class="action buffer-bottom">
      <%= f.submit 'Сохранить', class: 'btn btn-success' %>
    </div>

<% end %>